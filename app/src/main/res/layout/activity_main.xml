<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whatsapp_image_2024_03_10_at_15_33_09"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BERIKUT LIST GENRE ANIME YANG TERSEDIA, SILAHKAN PILIH"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="17dp"/>

    <ImageView
        android:id="@+id/romanceImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="35dp"
        android:paddingBottom="15dp"
        app:srcCompat="@drawable/romance_logo_3d6e69c767_seeklogo_com" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fantasyImage"
            android:layout_width="212dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:paddingTop="35dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/whatsapp_image_2024_03_09_at_02_03_11" />

        <ImageView
            android:id="@+id/isekaiImage"
            android:layout_width="198dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/whatsapp_image_2024_03_09_at_02_09_12" />
    </LinearLayout>
</LinearLayout>